<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="PhpInvest\Entity\Project" table="tbl_project">
        <unique-constraints>
            <unique-constraint columns="host,organization_name,repository_name" name="unique_project" />
        </unique-constraints>
        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>
        <field name="host" column="host" type="string"/>
        <field name="organizationName" column="organization_name" type="string"/>
        <field name="repositoryName" column="repository_name" type="string"/>
    </entity>
</doctrine-mapping>
